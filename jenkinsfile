pipeline {
    agent any

    environment {
        DOCKERHUB_USER = "your_dockerhub_username"
        IMAGE = "devops-demo-app"
    }

    stages {
        stage("Checkout Code") {
            steps {
                git branch: 'main', url: 'https://github.com/YOUR_GITHUB/devops-cicd-k8s-pipeline.git'
            }
        }

        stage("Build Docker Image") {
            steps {
                sh "docker build -t $DOCKERHUB_USER/$IMAGE:\$BUILD_NUMBER ."
            }
        }

        stage("Docker Login") {
            steps {
                sh "echo ${DOCKERHUB_PASS} | docker login -u ${DOCKERHUB_USER} --password-stdin"
            }
        }

        stage("Push Docker Image") {
            steps {
                sh "docker push $DOCKERHUB_USER/$IMAGE:\$BUILD_NUMBER"
            }
        }

        stage("Deploy to Kubernetes") {
            steps {
                sh """
                sed -i 's#IMAGE_TAG#$BUILD_NUMBER#' k8s/deployment.yaml
                kubectl apply -f k8s/
                """
            }
        }
    }
}
